PORT=5000
MONGO_URI=mongodb://localhost:27017/mern_boilerplate

JWT_SECRET=your_jwt_secret
SESSION_SECRET=your_super_long_and_random_session_secret_here_replace_me

# Frontend URL (Important for CORS and Redirects)
FRONTEND_URL=http://localhost:5173 # Replace with your actual frontend URL in production

# Google OAuth Credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE # Get this from Google Cloud Console
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE # Get this from Google Cloud Console

# Stripe API Keys (Placeholders - you need to get these from your Stripe Dashboard)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE # Starts with 'sk_test_' or 'sk_live_'
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE # Starts with 'pk_test_' or 'pk_live_'
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET_HERE # Get this when setting up a webhook endpoint in Stripe